<header>
  <% if(header.currSite == 1){ %>
    <h1>GF-Archive <h1 class="mobileDropdown">|</h1>   
      <select onchange="mobileWindowChange()" id="mobileNav" class="mobileDropdown" name="sites" id="sites">
        <option value="" selected disabled hidden>Home</option>
        <option value="Blog">Blog</option>
        <option value="Kontakt">Kontakt</option>
      </select>
    </h1>
  <% } %> 
  <% if(header.currSite == 2){ %>
    <h1>GF-Archive <h1 class="mobileDropdown">|</h1>   
      <select onchange="mobileWindowChange()" id="mobileNav" class="mobileDropdown" name="sites" id="sites">
        <option value="" selected disabled hidden>Blog</option>
        <option value="Kontakt">Kontakt</option>
        <option value="Home">Home</option>
      </select>
    </h1>
  <% } %>
  <% if(header.currSite == 3){ %>
    <h1>GF-Archive <h1 class="mobileDropdown">|</h1>   
      <select onchange="mobileWindowChange()" id="mobileNav" class="mobileDropdown" name="sites" id="sites">
        <option value="" selected disabled hidden>Kontakt</option>
        <option value="Home">Home</option>
        <option value="Blog">Blog</option>
      </select>
    </h1>
  <% } %>  
  <div class="menu">
    <% if(header.currSite == 1){ %>
        <a href="/home"><p style="font-weight: bold">Home</p></a>
        <a href="/blog"><p>Blog</p></a>
        <a href="/contact"><p>Kontakt</p></a>
    <% } %> <% if(header.currSite == 2){ %>
        <a href="/home"><p>Home</p></a>
        <a href="/blog"><p style="font-weight: bold">Blog</p></a>
        <a href="/contact"><p>Kontakt</p></a>
    <% } %> <% if(header.currSite == 3){ %>
        <a href="/home"><p>Home</p></a>
        <a href="/blog"><p>Blog</p></a>
        <a href="/contact"><p style="font-weight: bold">Kontakt</p></a>
    <% } %>
    <a href="https://www.instagram.com/gian.federspiel/" class="fa fa-instagram"></a>
  </div>
</header>
<script>
  function mobileWindowChange(){
    var select = document.getElementById("mobileNav");
    var value = select.options[select.selectedIndex].value;

    if(value == "Kontakt"){
      value = "Contact"
    }

    window.location.href = "/" + value;
  }
</script>